{
    "compilerOptions": {
        "baseUrl": "src",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "paths": {
            "@components/*": ["components/*"],
            "@ui/*": ["components/ui/*"],
            "@skeleton/*": ["components/skeleton/*"],
            "@styles/*": ["styles/*"],
            "@features/*": ["features/*"],
            "@static/*": ["static/*"],
            "@icons/*": ["static/icons/*"],
            "@utils/*": ["utils/*"],
            "@store/*": ["store/*"],
            "@hooks/*": ["hooks/*"],
            "@store": ["store/index.ts"],
            "@types": ["types.ts"]
        }
    },
    "include": ["src", "./src/.eslintrc.js"],
    "exclude": ["node_modules", "dist"]
}
